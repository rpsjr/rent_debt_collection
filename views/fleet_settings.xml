<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.fleet</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='fleet']" position="inside">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <span class="o_form_label">Traccar API Settings</span>
                                <div class="text-muted content-group mt16">
                                    <span>Traccar API URL </span>
                                    <field name="traccar_api_url"/>
                                </div>
                                <div class="text-muted content-group mt16">
                                    <span>Traccar API Key </span>
                                    <field name="traccar_api_key"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <span class="o_form_label">Horário de Bloqueio</span>
                                <div class="text-muted content-group mt16">
                                    <span>Início (Hora) </span>
                                    <field name="fleet_block_start_hour" widget="float_time"/>
                                </div>
                                <div class="text-muted content-group mt16">
                                    <span>Fim (Hora) </span>
                                    <field name="fleet_block_end_hour" widget="float_time"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <span class="o_form_label">Régua de Reincidência</span>
                                <div class="text-muted content-group mt16">
                                    <span>Janela de Análise (Dias) </span>
                                    <field name="fleet_recidivism_window_days"/>
                                    <div class="text-muted">Período para considerar inadimplência anterior.</div>
                                </div>
                                <div class="text-muted content-group mt16">
                                    <span>Tolerância Bom Pagador (Dias) </span>
                                    <field name="fleet_block_tolerance_days"/>
                                    <div class="text-muted">Dias de atraso tolerados para motoristas não reincidentes.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
